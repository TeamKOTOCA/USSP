# USSP - Distributed Storage Platform with Auth SDK
# Copy this file to .env and update with your actual values

# Node environment
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
# For local development, leave DATABASE_URL empty to use SQLite
# For production, set to your PostgreSQL connection string
DATABASE_URL=

# OAuth Configuration
OAUTH_SECRET=your-oauth-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Storage Adapters
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./data/storage

# Optional: AWS S3 Configuration
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# Optional: Google Drive Configuration
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@ussp.local

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_BACKUP_QUEUE=true
ENABLE_OAUTH=true
ENABLE_ADMIN_PANEL=true
